<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="#FEFFEA"
    android:layout_marginTop="1dp">


    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.infocancer.Diet">

        <android.support.v7.widget.CardView
            android:layout_marginBottom="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sm"
            android:clickable="true"
            android:onClick="tog_contentsm">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:background="#EEEEEE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/im_sm"
                    android:src="@drawable/smoking"/>
                <TextView
                    android:textColor="#ec182b4f"
                    android:background="#E0E0E0"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SMOKING" />
                <TextView
                    android:textColor="#ec182b4f"
                    android:layout_marginLeft="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/c_smoking"
                    android:visibility="gone"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginBottom="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ob"
            android:clickable="true"
            android:onClick="tog_contentob">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:background="#EEEEEE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/obesity"
                    android:id="@+id/im_ob"/>
                <TextView
                    android:textColor="#ec182b4f"
                    android:background="#E0E0E0"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="OBESITY AND WEIGTH"/>
                <TextView
                    android:textColor="#ec182b4f"
                    android:layout_marginLeft="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/c_obesity"
                    android:visibility="gone"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginBottom="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/al"
            android:clickable="true"
            android:onClick="tog_contental">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:background="#EEEEEE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/alcohol"
                    android:id="@+id/im_al"/>
                <TextView
                    android:textColor="#ec182b4f"
                    android:background="#E0E0E0"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ALCOHOL"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/c_alcohol"
                    android:visibility="gone"
                    android:textColor="#ec182b4f"
                    android:layout_marginLeft="6dp"/></LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginBottom="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/po"
            android:clickable="true"
            android:onClick="tog_contentpo">
            <LinearLayout
                android:background="#EEEEEE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pollution"
                    android:id="@+id/im_po"/>
                <TextView
                    android:textColor="#ec182b4f"
                    android:background="#E0E0E0"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AIR POLLUTION AND RADON"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/c_pollution"
                    android:visibility="gone"
                    android:textColor="#ec182b4f"
                    android:layout_marginLeft="6dp"/></LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginBottom="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hp"
            android:clickable="true"
            android:onClick="tog_contenthp">
            <LinearLayout
                android:background="#EEEEEE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hpv"
                    android:id="@+id/im_hp"/>
                <TextView
                    android:textColor="#ec182b4f"
                    android:background="#E0E0E0"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="INFECTIONS AND HPV"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/c_hpv"
                    android:visibility="gone"
                    android:textColor="#ec182b4f"
                    android:layout_marginLeft="6dp"/></LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginBottom="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/su"
            android:clickable="true"
            android:onClick="tog_contentsu">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:background="#EEEEEE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sun"
                    android:id="@+id/im_su"/>
                <TextView
                    android:textColor="#ec182b4f"
                    android:background="#E0E0E0"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SUN AND UV"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/c_sun"
                    android:visibility="gone"
                    android:textColor="#ec182b4f"
                    android:layout_marginLeft="6dp"/></LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginBottom="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ge"
            android:clickable="true"
            android:onClick="tog_contentge">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:background="#EEEEEE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/genes"
                    android:id="@+id/im_ge"/>
                <TextView
                    android:textColor="#ec182b4f"
                    android:background="#E0E0E0"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="INHERITED GENES"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/c_genes"
                    android:visibility="gone"
                    android:textColor="#ec182b4f"
                    android:layout_marginLeft="6dp"/></LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginBottom="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wo"
            android:clickable="true"
            android:onClick="tog_contentwo">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:background="#EEEEEE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/workplace"
                    android:id="@+id/im_wo"/>
                <TextView
                    android:textColor="#ec182b4f"
                    android:background="#E0E0E0"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WORKPLACE RISKS"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/c_workplace"
                    android:visibility="gone"
                    android:textColor="#ec182b4f"
                    android:layout_marginLeft="6dp"/></LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginBottom="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/di"
            android:clickable="true"
            android:onClick="tog_contentdi">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:background="#EEEEEE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/diet"
                    android:id="@+id/im_di"/>
                <TextView
                    android:textColor="#ec182b4f"
                    android:background="#E0E0E0"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DIET"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/c_diet"
                    android:visibility="gone"
                    android:textColor="#ec182b4f"
                    android:layout_marginLeft="6dp"/></LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>
