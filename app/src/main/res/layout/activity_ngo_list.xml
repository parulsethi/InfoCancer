<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="198dp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#212121"
        android:text="Cancer Support NGOs"
        android:background="@drawable/ngo"
        android:gravity="bottom|center_horizontal"
        android:shadowRadius="40"
        android:layout_gravity="center_horizontal" />


    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        android:background="#F1F8E9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ngo0">
    <LinearLayout
        android:background="#F1F8E9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#21482C"
        android:layout_gravity="center"
        android:id="@+id/north_text"
        android:background="#F1F8E9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="North India Region"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:id="@+id/ngo_rv"
        />
    </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        android:background="#F1F8E9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ngo1">
    <LinearLayout
        android:background="#E1F5FE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#01579B"
            android:layout_gravity="center"
            android:background="#E1F5FE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="South India Region"/>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:id="@+id/ngo_rv1"
            />
    </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        android:background="#F1F8E9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ngo2">
    <LinearLayout
        android:background="#E0F2F1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#006064"
            android:layout_gravity="center"
            android:background="#E0F2F1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="West India Region"/>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:id="@+id/ngo_rv2"
            />
    </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        android:background="#E0F7FA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ngo3">
    <LinearLayout
        android:background="#E0F7FA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#00B8D4"
            android:layout_gravity="center"
            android:background="#E0F7FA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="East India Region"/>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:id="@+id/ngo_rv3"
            />
    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
</ScrollView>